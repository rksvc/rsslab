{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 90
  },
  "linter": {
    "rules": {
      "a11y": {
        "recommended": false
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "tab"
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "*.js"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noDelete": "off"
          },
          "suspicious": {
            "noGlobalAssign": "off"
          }
        }
      }
    }
  ]
}